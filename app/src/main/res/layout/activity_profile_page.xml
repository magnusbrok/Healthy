<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:text="E-mail:"
        android:textSize="15sp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/redigerProfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topMenuFragment"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settingsTab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/settings_icon"
        app:layout_constraintBottom_toBottomOf="@+id/topMenuFragment"
        app:layout_constraintEnd_toEndOf="@+id/topMenuFragment"
        app:layout_constraintTop_toTopOf="@+id/topMenuFragment" />

    <ImageView
        android:id="@+id/logoHealthy"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/topMenuFragment"
        app:layout_constraintEnd_toStartOf="@+id/settingsTab"
        app:layout_constraintStart_toStartOf="@+id/topMenuFragment"
        app:layout_constraintTop_toTopOf="@+id/topMenuFragment"
        app:srcCompat="@drawable/healthy_icon" />

    <TextView
        android:id="@+id/dinProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Din Profil"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMenuFragment" />

    <ImageView
        android:id="@+id/iconProfile"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textNavn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinProfil"
        app:srcCompat="@drawable/profile_icon" />

    <FrameLayout
        android:id="@+id/menuFragment"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/redigerProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rediger profil"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tilfojForaldre"
        tools:layout_editor_absoluteX="75dp" />

    <Button
        android:id="@+id/tilfojForaldre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tilføj forældre E-mail"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/rounded_button"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/menuFragment"
        tools:layout_editor_absoluteX="75dp" />

    <TextView
        android:id="@+id/textNavn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:text="@string/navn"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textAlder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textAlder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:text="@string/alder"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textSkole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textSkole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:text="@string/skole"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textArgang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textArgang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:text="@string/rgang"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>