<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageFragment">

    <ImageButton
        android:id="@+id/homepage_social"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_buttons"
        android:backgroundTint="@color/colorGrey"
        android:text="Social"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homepage_reward"
        app:layout_constraintTop_toBottomOf="@+id/homepage_nutrition"
        app:layout_constraintVertical_bias="0.051"
        app:srcCompat="@drawable/social_page" />

    <ImageButton
        android:id="@+id/homepage_activity"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/custom_buttons"
        android:backgroundTint="@color/colorGrey"
        android:text="Activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/activity_guy_final" />

    <ImageButton
        android:id="@+id/homepage_reward"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_buttons"
        android:backgroundTint="@color/colorGrey"
        android:text="Reward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homepage_activity"
        app:layout_constraintVertical_bias="0.051"
        app:srcCompat="@drawable/reward_page" />

    <ImageButton
        android:id="@+id/homepage_nutrition"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/custom_buttons"
        android:backgroundTint="@color/colorGrey"
        android:text="Nutrition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/homepage_activity"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nutrition_page" />

</androidx.constraintlayout.widget.ConstraintLayout>