<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nutrition.DayNutrition">

    <TextView
        android:id="@+id/textView_nutritionDay_goals"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="MÃ¥l"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonView_nutritionDay_addFood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonView_nutritionDay_addFood" />

    <TextView
        android:id="@+id/textView_nutritionDay_log"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Log"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonView_nutritionDay_addFood"
        app:layout_constraintTop_toTopOf="@+id/buttonView_nutritionDay_addFood" />

    <ImageButton
        android:id="@+id/buttonView_nutritionDay_addFood"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="+"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pieChartView_nutritionDay"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/pieChartView_nutritionDay"
        app:layout_constraintTop_toBottomOf="@+id/pieChartView_nutritionDay"
        app:srcCompat="@drawable/nutrition_page_extra" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/pieChartView_nutritionDay"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>